
<mvc:View 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="webapp.controller.app"
    xmlns:f="sap.ui.layout.form" 
    displayBlock="true"
    >

     <App>
        <pages>
            <Page title="Agenda">
                <content>
                    <IconTabBar>
                        <items>
                        <IconTabFilter text="Contatos">
                         
                            <List id="contatosList" items="{path: '/contatos', templateShareable:false}">
                                <items>
                                    <StandardListItem
                                        title="{nome}"
                                        description="{telefone}
                                        ,{endereco}"
                                    />
                                </items>
                            </List>

                        </IconTabFilter>
                            <IconTabFilter text="Adicionar">
                                <Panel width="auto" class="sapUiResponsiveMargin">
                                <f:SimpleForm id="simpleFormChange" title="Adicionar um novo Contato:" editable="true" class="editableForm">
									<f:content>
										<Label text="Nome"/>
										<Input value=""/>
										<Label text="Endereco"/>
										<Input value=""/>
										<Label text="Telefone:"/>
										<Input value=""/>
									</f:content>
								</f:SimpleForm>
                                </Panel>
                                  <Toolbar>
									<ToolbarSpacer/>
									<Button text="Adicionar" type="Accept"/>
									<Button text="Cancelar" type="Reject"/>
								</Toolbar>
                            </IconTabFilter>
                        <IconTabFilter text="Alterar">
                              <Toolbar>
                                <SearchField />
                            </Toolbar>
                                  <Panel width="auto" class="sapUiResponsiveMargin">
                                <f:SimpleForm id="simpleFormChangeA" title="Alterar dados do Contato:" editable="true" class="editableForm">
									<f:content>
										<Label text="Nome"/>
										<Input value=""/>
										<Label text="Endereco"/>
										<Input value=""/>
										<Label text="Telefone:"/>
										<Input value=""/>
									</f:content>
								</f:SimpleForm>
                                </Panel>
                                 <Toolbar>
									<ToolbarSpacer/>
									<Button text="Alterar" type="Accept"/>
									<Button text="Cancelar" type="Reject"/>
								</Toolbar>
                        </IconTabFilter>
                        <IconTabFilter text="Remover">
                              <Toolbar>
                                <SearchField />
                            </Toolbar>
                                  <Panel width="auto" class="sapUiResponsiveMargin">
                                <f:SimpleForm id="simpleFormChangeR" title="Remover Contato:" editable="false" class="editableForm">
									<f:content>
										<Label text="Nome"/>
										<Input value="{address>/nome}"/>
										<Label text="Endereco"/>
										<Input value="{address>/endereco}"/>
										<Label text="Telefone:"/>
										<Input value="{address>/telefone}"/>
									</f:content>
								</f:SimpleForm>
                                </Panel>
                                <Toolbar>
									<ToolbarSpacer/>
									<Button text="Remover" type="Accept"/>
									<Button text="Cancelar" type="Reject"/>
								</Toolbar>
                        </IconTabFilter>                              
                        </items>
                    </IconTabBar>
                </content>               
            </Page>
        </pages>
    </App>
</mvc:View>


